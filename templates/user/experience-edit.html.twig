{# User experience edit template #}

{% extends "_layouts/dashboard.html.twig" %}

{% set pageTitle = 'Edition expérience utilisateur' %}
{% set breadcrumbs = [{text: 'Tableau de bord', href: path('dashboard_index') }, {text: 'Expérience utilisateur', href: ''}] %}
{% set btnParams = { class: 'primary radius', type: 'submit', icon_class: 'fa-check', attr: [ { 'aria-hidde': 'true' } ] } %}

{% block dashboard_content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="row">
            <div class="col-12 text-right">
                <button class="genric-btn primary radius"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;{{ button_label|default('Enregistrer') }}</button>
            </div>
        </div>
    {{ form_end(form) }}
    
    {% include "user/_skills.html.twig" %}
    
    <div class="row mt-5">
        <div class="col-12">
            <hr>
            {{ form_start(skill_form) }}
                {{ form_widget(skill_form) }}
                <div class="row">
                    <div class="col-12 text-right">
                        <button class="genric-btn primary radius"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;{{ button_label|default('Ajouter la nouvelle compétence') }}</button>
                    </div>
                </div>
            {{ form_end(skill_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include "user/experience-edit.js.twig" %}
{% endblock %}