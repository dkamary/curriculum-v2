{% extends 'backoffice.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block backoffice_main %}
    <div class="row">
        <div class="col-12">
            <h1>User index</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Identifiant</th>
                        <th>Email</th>
                        <th>Nom</th>
                        <th class="text-right">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.login }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.firstname ~ ' ' ~ user.lastname }}</td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
                            <a class="btn btn-info" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun utilisateur</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-right">
            <a class="btn btn-success" href="{{ path('user_new') }}">Nouvel utilisateur</a>
        </div>
    </div>
{% endblock %}
