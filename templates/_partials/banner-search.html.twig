{# page banner template #}

{% set pageTitle = pageTitle is defined ? pageTitle : 'Page' %}

<!-- start banner Area -->
<section class="banner-area relative" id="home">	
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="banner-content about-content col-lg-12">
                <h1 class="text-white">
                    {{ pageTitle }}			
                </h1>
                {{ render(path('search_form', { search: keywords|default('') })) }}
                {% include "_partials/breadcrumbs.html.twig" %}
            </div>											
        </div>
    </div>
</section>
<style>
    .about-content.banner-content {
        padding-bottom: 20px;
    }
</style>
<!-- End banner Area -->